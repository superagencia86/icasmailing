#header
  #welcome
    - if @current_user
      Bienvenido
      %span#welcome_username= @current_user.name
      %span> &nbsp;&nbsp;
      |


      - if @current_user.is_admin?
        = link_to("Administración", admin_path) << " |"

      = link_to("Cerrar sesión", logout_path)
    - else
      = link_to("Iniciar sesión", login_path) << " |"
      = link_to("Sobre", "#about", :rel => "facebox")
      
  #slogan
    %span Sistema de gestión de contactos y difusión online
    %span
      Espacio
      = " - #{current_space.name}" if current_space

  %h3
    - link_to(root_path) do
      %span
        Mailing
        = " ~ #{current_space.name}" if current_space

