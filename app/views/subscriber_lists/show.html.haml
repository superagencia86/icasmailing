.title_tools#menu
  %span#subscribers_count= @subscriber_list.subscribers.count(:all, :conditions => {:active => true})
  contactos
  - if can? :manage, @subscriber_list
    |
    = link_to("Volver", subscriber_lists_path)
    =# link_to("Eliminar", @subscriber_list, :method => :delete, :confirm => '¿Estás seguro que quieres eliminar la lista?')

.title
  %span
    = "#{@subscriber_list.name} - listado y edición de contactos #{params[:solo] == 'confirmados' ? 'CONFIRMADOS' : ''}"
    = "(Compartida, sólo lectura)" unless current_space.id == @subscriber_list.space_id
  
%p.actions
  Gestionar lista: 
  = link_to 'Ver contactos', subscriber_list_list_subscribers_path(resource)
  |
  = link_to 'Editar', edit_subscriber_list_path(resource)
  |
  = link_to 'Clonar', new_subscriber_list_path(:clone => @subscriber_list.id)
  |
  = link_to 'Borrar', subscriber_list_path(@subscriber_list), :method => :delete, :confirm => "Vas a borrar esta lista. ¡¿Estás segurx?!"
%p.actions
  Exportar contactos:
  = link_to 'En PDF', subscriber_list_list_export_path(@subscriber_list, :format => 'pdf')
  |
  = link_to 'En Excel', subscriber_list_list_export_path(@subscriber_list, :format => 'xls')
  |
  = link_to 'En CSV', subscriber_list_list_export_path(@subscriber_list, :format => 'csv')
- if !@subscriber_list.auto_update?
  %p.actions
    Importar contactos:
    = link_to 'De otra lista', new_subscriber_list_list_import_path(@subscriber_list, :source => 'list')
    |
    = link_to 'Usando un filtro'
    |
    = link_to 'Datos csv'

%h2 Información general
#summary
  %p
    = "Tipo: #{@subscriber_list.auto_update? ? 'Lista inteligente' : 'Lista normal'}<br/>"
    = "Nombre: #{@subscriber_list.name}<br/>"
    = "Descripción: #{@subscriber_list.description}<br/>"
    = "Espacio: #{@subscriber_list.space.name} (#{@subscriber_list.space_id == current_space.id ? 'Lista propia' : 'Lista compartida'})<br/>"
    = "Número contactos: #{@subscriber_list.contacts_count}<br/>"

%br/
%h2 Compartir
#summary
  %ul
    - @subscriber_list.shared_lists.each do |shared|
      %li
        = "Compartida con espacio '#{shared.space.name}'"
        = link_to "(Dejar de compartir)", subscriber_list_list_shared_list_path(@subscriber_list, shared), :method => :delete,
                :confirm => "¿Quiere dejar de compartir esta lista con #{shared.space.name}?"
    %li= 'No está compartida con ningún espacio' if @subscriber_list.shared_lists.size == 0


